<atlassian-plugin key="de.itagile.jimflowjira" name="JimFlow Custom Field Plugin"
	plugins-version="2">
	<plugin-info>
		<description>JimFlow Custom Field Plugin</description>
		<version>1.0</version>
		<vendor name="it-agile" url="http://it-agile.de" />
	</plugin-info>

	<customfield-type key="jimflowfield" name="JimFlow Field"
		i18n-name-key="JimFlow Field" class="de.itagile.jimflowjira.JimFlowField">
		<description>JimFlow Field</description>
		<resource type="velocity" name="view"
			location="de/itagile/jimflowjira/view-jimflow.vm" />
		<resource type="velocity" name="edit"
			location="templates/plugins/fields/edit/edit-basictext.vm" />
		<resource type="velocity" name="xml"
			location="templates/plugins/fields/xml/xml-basictext.vm" />
	</customfield-type>

</atlassian-plugin>